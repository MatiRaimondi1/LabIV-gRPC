<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Protos\base.proto" />
    <None Remove="Protos\calculadora.proto" />
  </ItemGroup>

  <ItemGroup>
	  <Protobuf Include="Protos\base.proto" GrpcServices="Server" ProtoRoot="Protos" />
	  <Protobuf Include="Protos\calculadora.proto" GrpcServices="Server" ProtoRoot="Protos" />
	  <Protobuf Include="Protos\greet.proto" GrpcServices="Server" ProtoRoot="Protos" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.57.0" />
  </ItemGroup>

</Project>
